# Cloud Cars - Environment Variables for Railway

# Database (automatically provided by Railway when you connect MySQL service)
DATABASE_URL=mysql://user:password@host:port/database

# Security
JWT_SECRET=CloudCars2024SecureRandomStringForJWTTokens!ChangeThis123
NODE_ENV=production

# Mailgun Email Service
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=mg.cloudcarsltd.com
MAILGUN_API_BASE_URL=https://api.eu.mailgun.net

# AWS S3 Storage (for image uploads in CMS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=cloudcars-uploads

# Server Configuration
PORT=8080
